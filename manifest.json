{
  "manifest_version": 2,
  "name": "Axie Damage Calculator",
  "description": "This extension helps to calculate the damage done by an Axie",
  "version": "1.0.2",
  "icons": {
    "96": "images/moz_icon96.png",
    "48": "images/moz_icon48.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://marketplace.axieinfinity.com/axie/*"
      ],
      "js": [
        "contentScript.js"
      ]
    }
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "https://marketplace.axieinfinity.com/axie/*",
    "tabs",
    "webNavigation"
  ],
  "browser_action": {
    "default_icon": "images/moz_icon48.png",
    "default_title": "Axie Damage Calculator",
    "default_popup": "popup.html"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "{8514a5de-029f-4dda-99d4-4139b34bd78a}"
    }
  }
}